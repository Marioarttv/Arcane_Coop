<script>
    window.createMagicParticles = function () {
        const container = document.getElementById('arcane-particles');
        if (!container) return;
        
        // Clear existing particles
        container.innerHTML = '';
        
        // Create floating magic particles
        for (let i = 0; i < 20; i++) {
            const particle = document.createElement('div');
            particle.className = 'magic-particle';
            
            // Randomize horizontal and initial vertical position
            particle.style.left = Math.random() * 100 + '%';
            particle.style.top = Math.random() * 120 + 'vh'; // Start from below viewport
            
            // Stagger animation delays more
            particle.style.animationDelay = Math.random() * 25 + 's';
            particle.style.animationDuration = (20 + Math.random() * 15) + 's';
            
            // Vary particle colors with more transparency
            const colors = ['#8b42ff', '#00d9ff', '#c724b1', '#00ffc8', '#ffd700'];
            const color = colors[Math.floor(Math.random() * colors.length)];
            particle.style.background = color;
            particle.style.boxShadow = `0 0 8px ${color}`;
            
            // Vary sizes
            const size = Math.random() * 3 + 2;
            particle.style.width = size + 'px';
            particle.style.height = size + 'px';
            
            container.appendChild(particle);
        }
    };
    
    window.createPiltoverRunes = function() {
        const container = document.getElementById('piltover-floating-runes');
        if (!container) return;
        
        container.innerHTML = '';
        
        const runes = ['ᚠ', 'ᚢ', 'ᚦ', 'ᚨ', 'ᚱ', 'ᚲ', 'ᚷ', 'ᚹ', 'ᚺ', 'ᚾ', 'ᛁ', 'ᛃ', 'ᛇ', 'ᛈ', 'ᛉ', 'ᛊ'];
        
        for (let i = 0; i < 12; i++) {
            const rune = document.createElement('div');
            rune.className = 'piltover-floating-rune';
            rune.textContent = runes[Math.floor(Math.random() * runes.length)];
            
            rune.style.left = Math.random() * 100 + '%';
            rune.style.animationDelay = Math.random() * 20 + 's';
            rune.style.animationDuration = (15 + Math.random() * 10) + 's';
            rune.style.fontSize = (20 + Math.random() * 15) + 'px';
            
            container.appendChild(rune);
        }
    };
    
    // Auto-initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        window.createMagicParticles();
        window.createPiltoverRunes();
    });
</script>

