<style>
    @@font-face {
        font-family: 'Arcane Nine';
        src: url('/fonts/Arcane Nine.otf') format('opentype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    :root {
        --zaun-primary: #0f3427;
        --zaun-secondary: #1e5f47;
        --zaun-accent: #00d4aa;
        --zaun-glow: #00ffc8;
        --zaun-dark: #0a1e16;
        --shimmer-pink: #ff007f;
        --shimmer-purple: #c724b1;
        --piltover-primary: #2c1810;
        --piltover-secondary: #5c3317;
        --piltover-accent: #c8aa6e;
        --piltover-glow: #ffd700;
        --piltover-light: #f5e6a3;
        --hextech-blue: #0596aa;
        --hextech-cyan: #44e5e7;
        --arcane-blue: #0596aa;
        --arcane-light-blue: #00d4ff;
        --arcane-sky-blue: #4da6ff;
        --arcane-pale-blue: #b8d4ff;
        --arcane-purple: #8b42ff;
        --neutral-dark: #000a0f;
        --neutral-light: #f0f8ff;
        --glitch-red: #ff003c;
        --glitch-blue: #00d9ff;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .arcane-landing {
        position: relative;
        min-height: 100vh;
        overflow-x: hidden;
        font-family: 'Rajdhani', sans-serif;
        color: var(--neutral-light);
    }

    /* Hextech Grid Overlay */
    .hextech-grid-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
            repeating-linear-gradient(0deg, transparent, transparent 99px, rgba(5, 150, 170, 0.03) 99px, rgba(5, 150, 170, 0.03) 100px),
            repeating-linear-gradient(90deg, transparent, transparent 99px, rgba(5, 150, 170, 0.03) 99px, rgba(5, 150, 170, 0.03) 100px);
        pointer-events: none;
        z-index: 1;
        animation: gridPulse 4s ease-in-out infinite;
    }

    @@keyframes gridPulse {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 0.6; }
    }

    /* Arcane Magic Particles */
    .arcane-particles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 2;
    }

    .magic-particle {
        position: absolute;
        width: 4px;
        height: 4px;
        background: var(--arcane-purple);
        border-radius: 50%;
        box-shadow: 0 0 10px var(--arcane-purple);
        animation: floatParticle 15s infinite linear;
    }

    @@keyframes floatParticle {
        0% {
            transform: translateY(20px) translateX(0px);
            opacity: 0;
        }
        5% {
            opacity: 0.8;
        }
        95% {
            opacity: 0.8;
        }
        100% {
            transform: translateY(-120vh) translateX(50px);
            opacity: 0;
        }
    }

    /* Split Background */
    .split-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .zaun-side, .piltover-side {
        position: absolute;
        top: 0;
        width: 50%;
        height: 100%;
    }

    .zaun-side {
        left: 0;
        background: linear-gradient(135deg, var(--zaun-dark) 0%, var(--zaun-primary) 40%, var(--zaun-secondary) 100%);
    }

    .piltover-side {
        right: 0;
        background: linear-gradient(135deg, var(--piltover-primary) 0%, var(--piltover-secondary) 40%, var(--piltover-accent) 100%);
    }

    .zaun-bg-image, .piltover-bg-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        opacity: 0.4;
    }

    .zaun-bg-image {
        background: radial-gradient(circle at 20% 80%, rgba(0, 212, 170, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 0, 127, 0.1) 0%, transparent 50%), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="zaun" patternUnits="userSpaceOnUse" width="20" height="20"><path d="M0,20 L20,0 M-5,5 L5,-5 M15,25 L25,15" stroke="%2300d4aa" stroke-width="0.5" opacity="0.3"/></pattern></defs><rect width="100" height="100" fill="url(%23zaun)"/></svg>');
    }

    .piltover-bg-image {
        background: radial-gradient(circle at 80% 80%, rgba(200, 170, 110, 0.1) 0%, transparent 50%), radial-gradient(circle at 20% 20%, rgba(5, 150, 170, 0.1) 0%, transparent 50%), url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="piltover" patternUnits="userSpaceOnUse" width="30" height="30"><polygon points="15,2 28,8 28,22 15,28 2,22 2,8" fill="none" stroke="%23c8aa6e" stroke-width="0.5" opacity="0.2"/></pattern></defs><rect width="100" height="100" fill="url(%23piltover)"/></svg>');
    }

    .zaun-atmosphere {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(ellipse at 30% 70%, rgba(0, 255, 200, 0.1) 0%, transparent 70%), radial-gradient(ellipse at 70% 30%, rgba(255, 0, 127, 0.08) 0%, transparent 60%);
        animation: shimmerFlow 8s ease-in-out infinite alternate;
    }

    /* Chemical Smoke Effect for Zaun */
    .chemical-smoke {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 60%;
        background: linear-gradient(to top, rgba(0, 212, 170, 0.15) 0%, transparent 50%);
        animation: smokeRise 20s ease-in-out infinite;
        mix-blend-mode: screen;
    }

    @@keyframes smokeRise {
        0%, 100% {
            transform: translateY(20px);
            opacity: 0.3;
        }
        50% {
            transform: translateY(-30px);
            opacity: 0.6;
        }
    }

    /* Pipe Steam Effect */
    .pipe-steam {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            radial-gradient(ellipse at 20% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 40%),
            radial-gradient(ellipse at 80% 60%, rgba(255, 255, 255, 0.03) 0%, transparent 35%);
        animation: steamBurst 8s ease-in-out infinite;
    }

    @@keyframes steamBurst {
        0%, 100% {
            opacity: 0.4;
            transform: scale(1);
        }
        50% {
            opacity: 0.7;
            transform: scale(1.1);
        }
    }

    .piltover-atmosphere {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(ellipse at 70% 30%, rgba(255, 215, 0, 0.1) 0%, transparent 70%), radial-gradient(ellipse at 30% 70%, rgba(5, 150, 170, 0.08) 0%, transparent 60%);
        animation: hextechFlow 6s ease-in-out infinite alternate;
    }

    /* Hextech Rings Background */
    .hextech-rings-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.15;
    }

    .hextech-rings-bg::before,
    .hextech-rings-bg::after {
        content: '';
        position: absolute;
        border: 2px solid var(--hextech-cyan);
        border-radius: 50%;
        animation: ringExpand 8s ease-in-out infinite;
    }

    .hextech-rings-bg::before {
        top: 20%;
        left: 60%;
        width: 200px;
        height: 200px;
    }

    .hextech-rings-bg::after {
        top: 60%;
        left: 20%;
        width: 150px;
        height: 150px;
        animation-delay: 4s;
    }

    @@keyframes ringExpand {
        0% {
            transform: scale(0.8);
            opacity: 0;
        }
        50% {
            transform: scale(1.2);
            opacity: 0.5;
        }
        100% {
            transform: scale(1.5);
            opacity: 0;
        }
    }

    /* Arcane Runes */
    .arcane-runes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            radial-gradient(circle at 30% 30%, var(--arcane-purple) 0%, transparent 2%),
            radial-gradient(circle at 70% 70%, var(--hextech-blue) 0%, transparent 2%),
            radial-gradient(circle at 50% 50%, var(--piltover-accent) 0%, transparent 1%);
        background-size: 100px 100px, 150px 150px, 80px 80px;
        animation: runeFloat 30s linear infinite;
        opacity: 0.1;
    }

    @@keyframes runeFloat {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }
        100% {
            transform: translate(-50px, -50px) rotate(360deg);
        }
    }

    /* Hexcrystal Runic Effects */
    .piltover-side::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 20% 20%, rgba(0, 150, 255, 0.15) 0%, transparent 40%), radial-gradient(circle at 80% 80%, rgba(100, 200, 255, 0.1) 0%, transparent 50%), radial-gradient(circle at 60% 40%, rgba(50, 150, 255, 0.08) 0%, transparent 30%);
        animation: runicPulse 8s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes runicPulse {
        0%, 100% {
            opacity: 0.6;
            transform: scale(1);
        }

        50% {
            opacity: 1;
            transform: scale(1.05);
        }
    }

    /* Steam/Industrial Effects for Zaun */
    .zaun-side::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, transparent 30%, rgba(0, 212, 170, 0.1) 45%, transparent 55%), linear-gradient(-45deg, transparent 40%, rgba(255, 255, 255, 0.05) 50%, transparent 60%), radial-gradient(ellipse at 30% 90%, rgba(200, 200, 200, 0.08) 0%, transparent 60%);
        animation: steamFlow 12s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes steamFlow {
        0% {
            transform: translateY(20px) rotate(0deg);
            opacity: 0.4;
        }

        50% {
            transform: translateY(-10px) rotate(2deg);
            opacity: 0.7;
        }

        100% {
            transform: translateY(-30px) rotate(-1deg);
            opacity: 0.3;
        }
    }

    @@keyframes shimmerFlow {
        0% {
            opacity: 0.6;
            transform: translateY(0px);
        }

        100% {
            opacity: 1;
            transform: translateY(-20px);
        }
    }

    @@keyframes hextechFlow {
        0% {
            opacity: 0.8;
            transform: translateY(0px);
        }

        100% {
            opacity: 1;
            transform: translateY(-10px);
        }
    }

    .shimmer-particles, .hextech-particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.6;
    }

    .shimmer-particles {
        background: radial-gradient(2px 2px at 20px 30px, var(--zaun-glow), transparent), radial-gradient(2px 2px at 40px 70px, var(--shimmer-pink), transparent), radial-gradient(1px 1px at 90px 40px, var(--zaun-accent), transparent);
        background-size: 200px 200px, 300px 300px, 150px 150px;
        animation: floatUp 15s infinite linear;
    }

    .hextech-particles {
        background: radial-gradient(2px 2px at 60px 80px, var(--piltover-glow), transparent), radial-gradient(1px 1px at 80px 20px, var(--hextech-blue), transparent), radial-gradient(2px 2px at 120px 60px, var(--piltover-accent), transparent);
        background-size: 250px 250px, 180px 180px, 220px 220px;
        animation: floatUp 12s infinite linear;
    }

    /* Piltover Floating Runes */
    .piltover-floating-runes {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
    }

